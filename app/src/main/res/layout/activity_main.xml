<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Mr. Potato Head"
        android:textSize="48sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="343dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/body" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="296dp"
            android:layout_height="98dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/arms"
            tools:layout_editor_absoluteY="188dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="87dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView19"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:srcCompat="@drawable/eyes" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="7dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/eyebrows" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="161dp"
            android:layout_height="111dp"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView19"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView8"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ears" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="131dp"
            android:layout_height="48dp"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="41dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/hat" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="103dp"
            android:layout_height="83dp"
            android:layout_marginTop="91dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/glasses" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="84dp"
            android:layout_height="68dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="71dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView19"
            app:srcCompat="@drawable/mouth" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="146dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView18"
            app:srcCompat="@drawable/shoes" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="159dp"
            android:layout_height="0dp"
            android:layout_marginTop="211dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/moustache2" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="89dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView18"
            app:layout_constraintEnd_toEndOf="@+id/imageView18"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="@+id/imageView18"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:srcCompat="@drawable/nose" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:gravity="center"
        android:text="Click his parts to add/remove them!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <CheckBox
                android:id="@+id/btn_hae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hae" />

            <CheckBox
                android:id="@+id/btn_eyebrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eyebrows" />

            <CheckBox
                android:id="@+id/btn_nose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nose" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/btn_arms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arms" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <CheckBox
                android:id="@+id/btn_Eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eyes" />

            <CheckBox
                android:id="@+id/btn_glasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glasses" />

            <CheckBox
                android:id="@+id/btn_mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mouth" />

            <CheckBox
                android:id="@+id/btn_ears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ears" />

            <CheckBox
                android:id="@+id/btn_shoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoes" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>